<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDDFED">

    <View
        android:id="@+id/view3"
        android:layout_width="380dp"
        android:layout_height="64dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#BCEFBAB6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_title"
        android:layout_width="357dp"
        android:layout_height="63dp"
        android:ems="10"
        android:hint="Title"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/view5"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="93dp"
        android:layout_height="54dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#C3B0B2EA"
        android:text="save"
        android:textColor="#4C4A4A"
        app:layout_constraintBottom_toTopOf="@+id/edt_title"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view5"
        android:layout_width="380dp"
        android:layout_height="524dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#BCEFBAB6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.612"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.695" />

    <EditText
        android:id="@+id/edt_content"
        android:layout_width="393dp"
        android:layout_height="461dp"
        android:layout_marginBottom="64dp"
        android:background="@android:color/transparent"
        android:gravity="top|start"
        android:hint="Write your Feelings...."
        android:inputType="textMultiLine"
        android:padding="12dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/view5"
        app:layout_constraintEnd_toEndOf="@+id/view5"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="@+id/view5" />

    <Button
        android:id="@+id/btn_date_picker"
        android:layout_width="367dp"
        android:layout_height="67dp"
        android:layout_marginTop="172dp"
        android:backgroundTint="#C3B0B2EA"
        android:text="Select Date"
        android:textColor="#4C4A4A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view4"
        android:layout_width="364dp"
        android:layout_height="71dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_corner2"
        android:backgroundTint="#FDF7DB"
        app:layout_constraintBottom_toBottomOf="@+id/view5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/View_boring"
        android:layout_width="69dp"
        android:layout_height="65dp"
        android:layout_marginTop="718dp"
        android:background="@drawable/circle_shape"
        android:backgroundTint="#FDF7DB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/View_happy"
        android:layout_width="69dp"
        android:layout_height="65dp"
        android:layout_marginTop="718dp"
        android:background="@drawable/circle_shape"
        android:backgroundTint="#FDF7DB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.295"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/View_love"
        android:layout_width="69dp"
        android:layout_height="65dp"
        android:layout_marginTop="718dp"
        android:background="@drawable/circle_shape"
        android:backgroundTint="#FDF7DB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/View_mad"
        android:layout_width="69dp"
        android:layout_height="65dp"
        android:layout_marginTop="718dp"
        android:background="@drawable/circle_shape"
        android:backgroundTint="#FDF7DB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.935"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/View_sad"
        android:layout_width="69dp"
        android:layout_height="65dp"
        android:layout_marginTop="718dp"
        android:background="@drawable/circle_shape"
        android:backgroundTint="#FDF7DB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.73"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/emoji_boring"
        android:layout_width="73dp"
        android:layout_height="68dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/view5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/neutral_" />

    <ImageView
        android:id="@+id/emoji_love"
        android:layout_width="73dp"
        android:layout_height="68dp"
        android:layout_marginEnd="148dp"
        app:layout_constraintBottom_toBottomOf="@+id/emoji_happy"
        app:layout_constraintEnd_toEndOf="@+id/view4"
        app:layout_constraintTop_toTopOf="@+id/emoji_happy"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/fin" />

    <ImageView
        android:id="@+id/emoji_happy"
        android:layout_width="73dp"
        android:layout_height="68dp"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintStart_toEndOf="@+id/emoji_boring"
        app:srcCompat="@drawable/happy" />

    <ImageView
        android:id="@+id/emoji_sad"
        android:layout_width="73dp"
        android:layout_height="68dp"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintStart_toEndOf="@+id/emoji_love"
        app:layout_constraintTop_toTopOf="@+id/view4"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/sad" />

    <ImageView
        android:id="@+id/emoji_mad"
        android:layout_width="73dp"
        android:layout_height="68dp"
        app:layout_constraintBottom_toBottomOf="@+id/emoji_sad"
        app:layout_constraintStart_toEndOf="@+id/emoji_sad"
        app:layout_constraintTop_toTopOf="@+id/emoji_sad"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/mad" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/edt_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_date_picker"
        android:layout_marginTop="-10dp">

        <RadioButton
            android:id="@+id/radioPrimary"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:text="Primary"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/radioPrivate"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:text="Private"
            android:textSize="14sp" />
    </RadioGroup>



</androidx.constraintlayout.widget.ConstraintLayout>